<div class="container">
    <div class="row">
        <div class="col-sm-12 col-sm-offset-2">
            <div class="col-sm-12 d-flex justify-content-between">
                <h4 class="font-weight-bold">Student Dashboard</h4>
                <div class="float-right">
                    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#modalRegCourse" id="txtRegCourse">Register for a Course</a>
                </div>

            </div>
            <hr />

            <div class="row">
                <div class="col-sm-12 col-sm-offset-2">

                    <div>
                        <h5 class="col mb-3 text-black-50">My Registered Courses</h5>
                        <hr class="mb-3" />
                        <div class="">
                            <table class="table table-responsive-sm clickable-row table-hover" id="tbl-regCourses">
                                <thead>
                                    <tr>
                                        <th scope="col">S/N</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Syllable</th>
                                        <th scope="col">Teacher</th>

                                    </tr>
                                </thead>
                            </table>
                            
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
