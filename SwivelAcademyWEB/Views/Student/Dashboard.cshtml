<div class="modal fade" id="modalRegCourse" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">

        <div class="modal-content">
            <form method="post" id="frmScreen">
                <div class="modal-header mr-4 ml-4">
                    <h5 class="modal-title font-weight-bold" id="exampleModalLongTitle">Register for a course</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="m-4">
                        <h6 class="mb-2">Select the course to register.</h6>
                        <select class="form-control" id="drpAllCourses" name="drpAllCourses" style="border-radius:0px" required>
                        </select>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <input type="submit" class="btn btn-primary mr-4" id="btnRegisterCourse" value="Register" />
                </div>
            </form>

        </div>

    </div>
</div>